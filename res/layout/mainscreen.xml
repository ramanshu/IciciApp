<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/lib/com.icici.mobi.view.SlidingOptionButton"
    android:id="@+id/mainScreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_pg"
    android:gravity="left"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <include layout="@layout/pathview" />

    <ImageButton
        android:id="@+id/pathViewToggle"
        android:layout_width="60px"
        android:layout_height="20px"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Sir" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <include layout="@layout/screen_option_container" />
        <include layout="@layout/assistance_buttons" />
    </FrameLayout>

</LinearLayout>