<?xml version="1.0" encoding="utf-8"?>
<com.icici.mobi.view.PathView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/lib/com.icici.mobi.view.SlidingOptionButton"
    android:id="@+id/pathView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:background="#000"
    android:orientation="horizontal" 
    android:visibility="gone"
    >"
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.icici.mobi.view.ScreenOptionButton
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:orientation="vertical"
            custom:titleText="Background color"
            custom:valueColor="@android:color/holo_green_light" />

        <com.icici.mobi.view.ScreenOptionButton
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:orientation="vertical"
            custom:titleText="Background color"
            custom:valueColor="@android:color/holo_green_light" />

        <com.icici.mobi.view.ScreenOptionButton
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:orientation="vertical"
            custom:titleText="Background color"
            custom:valueColor="@android:color/holo_green_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icon_menu"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icon_menu"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icon_menu"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icon_menu"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icon_menu"
            android:visibility="visible" />
    </LinearLayout>

</com.icici.mobi.view.PathView>